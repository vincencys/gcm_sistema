<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Permissão para acesso à internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Permissões de localização para enviar latitude/longitude junto com o disparo -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- Permissão para foreground service e notificações -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.PanicApp">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.gov.pr.pbto.gcm.panic.RegisterActivity"
            android:exported="false" />
        <!-- Activity para visualizar PDFs remotos via WebView/Google Docs Viewer -->
        <activity
            android:name="com.seuprojeto.panico.PdfViewActivity"
            android:exported="false"
            android:theme="@style/Theme.PanicoApp" />
        <service android:name=".PanicLocationService"
            android:foregroundServiceType="location"
            android:exported="false"/>
        <!-- Firebase Messaging Service -->
        <service
            android:name=".PanicoMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>
