<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#b91c1c">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOLICITAR CADASTRO"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preencha todos os campos abaixo"
            android:textSize="14sp"
            android:textColor="#EEEEEE"
            android:layout_marginBottom="32dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome Completo"
                    style="@style/Widget.Panic.TextInputLayout.Outlined"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName|textCapWords"
                        android:textColor="@color/panic_on_surface"
                        android:textColorHint="@color/panic_hint"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CPF"
                    style="@style/Widget.Panic.TextInputLayout.Outlined"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCpf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="14"
                        android:textColor="@color/panic_on_surface"
                        android:textColorHint="@color/panic_hint"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Telefone"
                    style="@style/Widget.Panic.TextInputLayout.Outlined"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTelefone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:maxLength="15"
                        android:textColor="@color/panic_on_surface"
                        android:textColorHint="@color/panic_hint"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Número do Processo MP"
                    style="@style/Widget.Panic.TextInputLayout.Outlined"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etProcesso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="25"
                        android:textColor="@color/panic_on_surface"
                        android:textColorHint="@color/panic_hint"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Endereço"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Rua/Avenida"
                    style="@style/Widget.Panic.TextInputLayout.Outlined"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRua"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:textColor="@color/panic_on_surface"
                        android:textColorHint="@color/panic_hint"/>
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Número"
                        style="@style/Widget.Panic.TextInputLayout.Outlined"
                        android:layout_marginEnd="6dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNumero"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLength="10"
                            android:textColor="@color/panic_on_surface"
                            android:textColorHint="@color/panic_hint"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Bairro"
                        style="@style/Widget.Panic.TextInputLayout.Outlined"
                        android:layout_marginStart="6dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etBairro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:textColor="@color/panic_on_surface"
                            android:textColorHint="@color/panic_hint"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Referência (opcional)"
                    style="@style/Widget.Panic.TextInputLayout.Outlined"
                    android:layout_marginBottom="20dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etReferencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences"
                        android:textColor="@color/panic_on_surface"
                        android:textColorHint="@color/panic_hint"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Documento da Medida Protetiva"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btnSelectFile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SELECIONAR ARQUIVO"
                    android:textSize="14sp"
                    android:backgroundTint="#4B5563"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvFileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nenhum arquivo selecionado"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    android:layout_marginBottom="24dp"/>

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="SOLICITAR CADASTRO"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="#b91c1c"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Após o envio, sua solicitação será analisada pela equipe. Você receberá seu token de acesso após aprovação."
            android:textSize="12sp"
            android:textColor="#EEEEEE"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="16dp"/>

    </LinearLayout>
</ScrollView>
